<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/middle_cell"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardBackgroundColor="@android:color/holo_blue_light"
        app:cardUseCompatPadding="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/middle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/r1_cell"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardBackgroundColor="@android:color/holo_blue_light"
        app:cardUseCompatPadding="true"
        app:layout_constraintLeft_toRightOf="@id/middle_cell"
        app:layout_constraintTop_toTopOf="parent" >

    <TextView
        android:id="@+id/r1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/r2_cell"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardBackgroundColor="@android:color/holo_blue_light"
        app:cardUseCompatPadding="true"
        app:layout_constraintLeft_toRightOf="@id/r1_cell"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/r2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/l1_cell"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardBackgroundColor="@android:color/holo_blue_light"
        app:cardUseCompatPadding="true"
        app:layout_constraintRight_toLeftOf="@id/middle_cell"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/l1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/l2_cell"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardBackgroundColor="@android:color/holo_blue_light"
        app:cardUseCompatPadding="true"
        app:layout_constraintRight_toLeftOf="@id/l1_cell"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/l2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/left_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move Left"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/right_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/left_button"
        android:text="Move Right"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>